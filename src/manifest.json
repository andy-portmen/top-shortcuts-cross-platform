{
  "name": "Top Shortcuts",
  "version": "0.1.3",
  "manifest_version": 2,
  "short_name": "topshortcuts",
  "description": "Shortcuts of Top Websites",
  "author": "Andy Portmen",
  "permissions": [
    "tabs", 
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "data/icon48.png",
    "default_popup": "data/popup/popup.html",
    "default_title": "Top Shortcuts"
  },
  "background": {
    "scripts": ["lib/task.js", "lib/chrome.js", "lib/common.js"]
  },
  "icons": {
    "16": "data/icon16.png",
    "48": "data/icon48.png",
    "128": "data/icon128.png" 
  }
}
